{
  "name": "babybuddy-droplet",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers-extra/features/digitalocean-cli:1": {
      "version": "1.142.0"
    },
    "ghcr.io/devcontainers-extra/features/packer-asdf:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "timonwong.shellcheck"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "postCreateCommand": "packer plugins install github.com/digitalocean/digitalocean"
}
